                  <td class="actions">
                    <button class="btn btn-secondary" onclick="editAgent(<%= agent.id %>, '<%= agent.firstName %>', '<%= agent.middleName %>', '<%= agent.lastName %>', '<%= agent.email %>', '<%= agent.phone %>')">Edit</button>
                    <button class="btn btn-danger" onclick="deleteAgent(<%= agent.id %>)">Delete</button>
