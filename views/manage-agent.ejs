    }
    .modal-content {
      background: white;
      padding: 2rem;
      border-radius: 15px;
      width: 90%;
      max-width: 500px;
      text-align: center;
      animation: modalFadeIn 0.3s ease-out; /* Faster modal animation */
    }
    @keyframes modalFadeIn {
      from { opacity: 0; transform: scale(0.9); }
