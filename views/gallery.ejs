<div id="lightbox" role="dialog" aria-modal="true">
    <button id="lb-close" onclick="closeLightbox()"><i class="fas fa-times"></i></button>
    <div id="lb-counter"></div>
    <button id="lb-prev" onclick="shiftLightbox(-1)"><i class="fas fa-chevron-left"></i></button>
    <img id="lb-img" src="" alt="Property">
    <button id="lb-next" onclick="shiftLightbox(1)"><i class="fas fa-chevron-right"></i></button>
    <p id="lb-caption"></p>
</div>

<script>
var lightboxImages = [], lightboxIndex = 0;

document.addEventListener('DOMContentLoaded', function() {
    // Mobile menu
    document.getElementById('mobile-menu-button').addEventListener('click', function() { document.getElementById('mobile-menu').classList.add('show'); });
    var mc = document.getElementById('mobile-close');
    if (mc) mc.addEventListener('click', function() { document.getElementById('mobile-menu').classList.remove('show'); });

    // Dropdown
    var st = document.getElementById('service-toggle'), sm = document.getElementById('service-menu');
    if (st && sm) {
        st.addEventListener('click', function(e) { e.stopPropagation(); sm.classList.toggle('show'); st.setAttribute('aria-expanded', sm.classList.contains('show')); });
        document.addEventListener('click', function() { sm.classList.remove('show'); });
        document.addEventListener('keydown', function(e) { if (e.key === 'Escape') sm.classList.remove('show'); });
    }

    // Login check
    var dc = document.getElementById('desktop-login-container'), ms = document.getElementById('mobile-login-section');
    fetch('/api/check-login', { credentials: 'include' }).then(function(r) { return r.json(); }).then(function(d) {
        if (d.loggedIn) {
            if (dc) dc.innerHTML = '<a href="/logout" class="btn-logout" id="logout-btn-desktop"><i class="fas fa-sign-out-alt" style="margin-right:5px;"></i>Logout</a>';
            if (ms) ms.innerHTML = '<a href="/logout" class="btn-logout" style="display:block;text-align:center;width:100%;padding:13px;border-radius:10px;"><i class="fas fa-sign-out-alt" style="margin-right:5px;"></i>Logout</a>';
        }
    }).catch(function() {});

    // Section tabs
    document.querySelectorAll('.sec-tab').forEach(function(tab) {
        tab.addEventListener('click', function() {
            document.querySelectorAll('.sec-tab').forEach(function(t) { t.classList.remove('active'); });
            document.querySelectorAll('.tab-panel').forEach(function(p) { p.classList.remove('active'); });
            tab.classList.add('active');
            document.getElementById('tab-' + tab.dataset.tab).classList.add('active');
            window.scrollTo({ top: document.querySelector('.section-tabs-bar').offsetTop - 10, behavior: 'smooth' });
        });
    });

    // Stats
    var allCards = Array.from(document.querySelectorAll('#gallery-grid .gallery-item'));
    var g = function(id) { return document.getElementById(id); };
    if (g('stat-total')) g('stat-total').textContent = allCards.length;
    if (g('stat-sale'))  g('stat-sale').textContent  = allCards.filter(function(c) { return (c.dataset.rentsell || '').includes('sell'); }).length;
    if (g('stat-rent'))  g('stat-rent').textContent  = allCards.filter(function(c) { return (c.dataset.rentsell || '').includes('rent'); }).length;

    // Gallery filters
    var activeFilter = 'all', searchTerm = '';
    function applyFilters() {
        var vis = 0;
        allCards.forEach(function(c) {
            var tm = activeFilter === 'all' || c.dataset.type === activeFilter ||
                (activeFilter === 'sell' && (c.dataset.rentsell || '').includes('sell')) ||
                (activeFilter === 'Rent' && (c.dataset.rentsell || '').includes('rent'));
            var sm2 = !searchTerm || (c.dataset.title || '').includes(searchTerm) || (c.dataset.address || '').includes(searchTerm);
            var show = tm && sm2;
            c.style.display = show ? '' : 'none';
            if (show) vis++;
        });
        var rc = g('result-count'), es = g('empty-gallery-state');
        if (rc) rc.textContent = vis + ' propert' + (vis === 1 ? 'y' : 'ies') + ' found';
        if (es) es.style.display = vis > 0 ? 'none' : '';
    }

    document.querySelectorAll('.filter-tab').forEach(function(tab) {
        tab.addEventListener('click', function() {
            document.querySelectorAll('.filter-tab').forEach(function(t) { t.classList.remove('active'); });
            tab.classList.add('active');
            activeFilter = tab.dataset.filter;
            applyFilters();
        });
    });
    var si = g('gallery-search');
    if (si) si.addEventListener('input', function() { searchTerm = si.value.trim().toLowerCase(); applyFilters(); });
    applyFilters();

    // Build lightbox array
    document.querySelectorAll('#gallery-grid .gallery-item').forEach(function(item) {
        var img = item.querySelector('img');
        lightboxImages.push({ src: img ? img.src : '', caption: item.dataset.caption || 'Property' });
    });

    // Load more
    var lb = g('load-more-btn');
    if (lb) {
        if (allCards.length <= 12) lb.style.display = 'none';
        else {
            var shown = 12;
            lb.addEventListener('click', function() { shown += 12; applyFilters(); if (shown >= allCards.length) lb.style.display = 'none'; });
        }
    }

    // Keyboard lightbox
    document.addEventListener('keydown', function(e) {
        if (!document.getElementById('lightbox').classList.contains('open')) return;
        if (e.key === 'ArrowLeft') shiftLightbox(-1);
        if (e.key === 'ArrowRight') shiftLightbox(1);
        if (e.key === 'Escape') closeLightbox();
    });
    document.getElementById('lightbox').addEventListener('click', function(e) { if (e.target === this) closeLightbox(); });
});

function openLightbox(index) {
    if (!lightboxImages.length) return;
    lightboxIndex = index;
    renderLightbox();
    document.getElementById('lightbox').classList.add('open');
    document.body.style.overflow = 'hidden';
}

function openStaticLightbox(src, caption) {
    var img = document.getElementById('lb-img');
    img.style.opacity = '0';
    img.src = src;
    img.onerror = function() { img.style.opacity = '1'; document.getElementById('lb-caption').textContent = '📁 Photo not uploaded yet: ' + src; };
    img.onload = function() { img.style.opacity = '1'; };
    document.getElementById('lb-caption').textContent = caption || '';
    document.getElementById('lb-counter').textContent = '';
    document.getElementById('lightbox').classList.add('open');
    document.body.style.overflow = 'hidden';
}

function closeLightbox() { document.getElementById('lightbox').classList.remove('open'); document.body.style.overflow = ''; }
function shiftLightbox(dir) { lightboxIndex = (lightboxIndex + dir + lightboxImages.length) % lightboxImages.length; renderLightbox(); }
function renderLightbox() {
    var e = lightboxImages[lightboxIndex];
    var img = document.getElementById('lb-img');
    if (e && e.src) { img.style.opacity = '0'; img.src = e.src; img.onload = function() { img.style.opacity = '1'; }; }
    document.getElementById('lb-caption').textContent = e ? e.caption : '';
    document.getElementById('lb-counter').textContent = (lightboxIndex + 1) + ' / ' + lightboxImages.length;
}
function resetFilters() {
    document.querySelectorAll('.filter-tab').forEach(function(t) { t.classList.remove('active'); });
    var at = document.querySelector('.filter-tab[data-filter="all"]');
    if (at) at.classList.add('active');
    var si = document.getElementById('gallery-search');
    if (si) si.value = '';
    document.querySelectorAll('#gallery-grid .gallery-item').forEach(function(c) { c.style.display = ''; });
    var es = document.getElementById('empty-gallery-state');
    if (es) es.style.display = 'none';
}
</script>
