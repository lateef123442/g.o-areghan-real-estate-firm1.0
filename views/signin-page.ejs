<script>
    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Tab switching â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    function switchTab(tab) {
        document.getElementById('panel-login').classList.toggle('active', tab === 'login');
        document.getElementById('panel-register').classList.toggle('active', tab === 'register');
        document.getElementById('tab-login').classList.toggle('active', tab === 'login');
        document.getElementById('tab-register').classList.toggle('active', tab === 'register');
    }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Step navigation â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    let currentRegStep = 1;

    function showRegStep(n) {
        document.querySelectorAll('.reg-step').forEach(s => s.classList.remove('active'));
        document.getElementById(`reg-step-${n}`).classList.add('active');
        // Progress dots
        [1,2,3].forEach(i => {
            const d = document.getElementById(`dot-${i}`);
            d.className = 'step-dot';
            if (i < n) d.classList.add('done');
            else if (i === n) d.classList.add('active');
        });
        document.getElementById('step-num').textContent = n;
        currentRegStep = n;
    }

    function nextStep(from) {
        if (!validateStep(from)) return;
        showRegStep(from + 1);
    }
    function prevStep(from) { showRegStep(from - 1); }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Validation â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    function setErr(id, msg) {
        const el = document.getElementById(id);
        if (!el) return;
        el.innerHTML = msg ? `<i class="fas fa-exclamation-circle"></i> ${msg}` : '';
    }

    function validateStep(step) {
        let ok = true;
        if (step === 1) {
            const fn = document.getElementById('firstName').value.trim();
            const ln = document.getElementById('lastName').value.trim();
            const ph = document.getElementById('phone').value.trim();
            setErr('err-firstName', fn ? '' : 'First name is required.');
            setErr('err-lastName', ln ? '' : 'Last name is required.');
            if (!fn || !ln) ok = false;
            if (!ph || !/^\+?\d{10,15}$/.test(ph)) {
                setErr('err-phone', 'Enter a valid phone number (10â€“15 digits).');
                ok = false;
            } else { setErr('err-phone', ''); }
        }
        if (step === 2) {
            const em = document.getElementById('email').value.trim();
            if (!em || !/^\S+@\S+\.\S+$/.test(em)) {
                setErr('err-email', 'Enter a valid email address.'); ok = false;
            } else { setErr('err-email', ''); }
        }
        return ok;
    }

    function submitReg(e) {
        e.preventDefault();
        const pwd = document.getElementById('password').value.trim();
        const cpwd = document.getElementById('confirmPassword').value.trim();
        const terms = document.getElementById('terms-check').checked;
        let ok = true;

        if (!pwd || pwd.length < 6) {
            setErr('err-password', 'Password must be at least 6 characters.'); ok = false;
        } else { setErr('err-password', ''); }

        if (cpwd !== pwd) {
            setErr('err-confirm', 'Passwords do not match.'); ok = false;
        } else { setErr('err-confirm', ''); }

        if (!terms) {
            showAlert('reg-alert', 'Please agree to the Terms of Service to continue.', 'error'); ok = false;
        }

        if (ok) document.getElementById('reg-form').submit();
        return false;
    }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Password strength â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    function checkStrength(val) {
        const fill = document.getElementById('strength-fill');
        const label = document.getElementById('strength-label');
        let score = 0;
        if (val.length >= 6) score++;
        if (val.length >= 10) score++;
        if (/[A-Z]/.test(val)) score++;
        if (/[0-9]/.test(val)) score++;
        if (/[^A-Za-z0-9]/.test(val)) score++;

        const levels = [
            { pct: '0%', color: 'var(--gray-200)', text: 'Enter a password' },
            { pct: '25%', color: '#ef4444', text: 'Weak' },
            { pct: '50%', color: '#f97316', text: 'Fair' },
            { pct: '75%', color: '#eab308', text: 'Good' },
            { pct: '100%', color: 'var(--green)', text: 'Strong ðŸ”’' },
        ];
        const l = levels[Math.min(score, 4)];
        fill.style.width = l.pct;
        fill.style.background = l.color;
        label.textContent = l.text;
        label.style.color = l.color === 'var(--gray-200)' ? 'var(--gray-400)' : l.color;
    }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Password toggle â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    function togglePwd(id, btn) {
        const input = document.getElementById(id);
        const isText = input.type === 'text';
        input.type = isText ? 'password' : 'text';
        btn.innerHTML = isText ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
    }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Alert â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    function showAlert(id, msg, type) {
        const el = document.getElementById(id);
        el.textContent = msg;
        el.className = `form-alert ${type}`;
        setTimeout(() => { el.style.display = 'none'; el.className = 'form-alert'; }, 5000);
    }

    /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Login form â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    document.getElementById('login-form').addEventListener('submit', function(e) {
        const em = document.getElementById('login-email').value.trim();
        const pw = document.getElementById('login-password').value.trim();
        let ok = true;
        setErr('login-email-err', em && /^\S+@\S+\.\S+$/.test(em) ? '' : 'Enter a valid email address.');
        setErr('login-pwd-err', pw ? '' : 'Password is required.');
        if (!em || !/^\S+@\S+\.\S+$/.test(em) || !pw) { e.preventDefault(); ok = false; }
        if (ok) {
            const btn = document.getElementById('login-btn');
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Signing in...';
        }
    });

    /* Init */
    showRegStep(1);
</script>
