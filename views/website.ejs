        .btn-gold {
            width: 100%;
            padding: 13px;
            background: var(--gold);
            color: var(--navy);
            border: none;
            border-radius: 10px;
            font-family: inherit;
            font-size: 0.875rem;
            font-weight: 700;
            cursor: pointer;
